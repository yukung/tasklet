<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
  <data-sources>
  </data-sources>
  <form-beans>
    <!-- ログイン情報用Form -->
    <form-bean name="loginForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
      <form-property name="userName" type="java.lang.String"/>
      <form-property name="password" type="java.lang.String"/>
    </form-bean>
    <!-- アクティビティ情報用Form -->
    <form-bean name="addActivityForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
      <form-property name="activityName" type="java.lang.String"/>
    </form-bean>
    <!-- タスク一覧選択用Form -->
    <form-bean name="checkTaskForm" type="tasklet.form.checkTaskForm"/>
    <!-- タスク追加用Form -->
    <form-bean name="addTaskForm" type="tasklet.form.addTaskForm"/>
    <!-- タスク状況更新用Form -->
    <form-bean name="updateTaskForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
      <form-property name="actualTime" type="java.lang.Double"/>
      <form-property name="note" type="java.lang.String"/>
    </form-bean>
    <!-- タスク属性修正用Form -->
    <form-bean name="modifyTaskForm" type="tasklet.form.modifyTaskForm"/>
    <!-- メモ追加用Form -->
    <form-bean name="addNoteForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
      <form-property name="note" type="java.lang.String"/>
    </form-bean>
    <!-- ユーザー情報登録Form -->
    <form-bean name="registerUserForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
      <form-property name="userName" type="java.lang.String"/>
      <form-property name="displayName" type="java.lang.String"/>
      <form-property name="email" type="java.lang.String"/>
      <form-property name="password" type="java.lang.String"/>
      <form-property name="confirm" type="java.lang.String"/>
    </form-bean>
  </form-beans>
  <global-exceptions>
  </global-exceptions>
  <global-forwards>
  </global-forwards>
  <action-mappings>
    <!-- トップページへ遷移する。 -->
    <action path="/index" forward="top">
    </action>
    <!-- 入力されたログインIDとパスワードが正しいかどうかをチェックし、正しい場合はユーザオブジェクトを生成し、sessionスコープに登録する。 -->
    <action path="/login" name="loginForm" type="tasklet.action.LoginAction" scope="session" validate="true" input="top">
      <forward name="success" path="/showActivities.do"/>
    </action>
    <action path="/showActivities" forward="activities">
    </action>
    <!-- ユーザー登録画面に遷移する。 -->
    <action path="/register" forward="register">
    </action>
    <!-- 入力されたユーザー情報から、ユーザー情報オブジェクトを生成し、データベースに追加する。 -->
    <action path="/registerUser" name="registerUserForm" type="tasklet.action.RegisterUserAction" scope="request" validate="true" input="register">
      <forward name="success" path="registResult"/>
    </action>
  </action-mappings>
  <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
  <message-resources parameter="MessageResources"/>
  <plug-in className="org.apache.struts.tiles.TilesPlugin">
    <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"/>
    <set-property property="moduleAware" value="true"/>
  </plug-in>
  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
  </plug-in>
</struts-config>
